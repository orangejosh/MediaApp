@model IEnumerable<MediaApp.Models.People>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ModelIndexLayout.cshtml";
}

<h2 class="modelTitle">People</h2>

<div class="movieTable">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <br />

    @if (ViewBag.Index > 1)
    {
        @Html.ActionLink("<< Previous ", "Index", "People", new {index = ViewBag.Index - 50}, null)
    }
    @if (ViewBag.Index < 950){
        @Html.ActionLink(" Next >>", "Index", "People", new {index = ViewBag.Index + 50}, null)
    }

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @if (item.PeopleImage != null)
                    {
                        var imgData = "data:" + @item.PeopleImage.Type + ";base64," + @item.PeopleImage.Data;
                        <img height="75" src=@imgData />
                    } else if (item.imgURL != null)
                    {
                        <img height="75" src=@item.imgURL />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @foreach (var movie in item.Movies)
                    {
                        <p class="wordList">@movie.Title</p>
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </table>

    @if (ViewBag.Index > 1)
    {
        @Html.ActionLink("<< Previous ", "Index", "People", new {index = ViewBag.Index - 50}, null)
    }
    @if (ViewBag.Index < 950){
        @Html.ActionLink(" Next >>", "Index", "People", new {index = ViewBag.Index + 50}, null)
    }
</div>
