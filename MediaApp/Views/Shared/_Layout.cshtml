<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body> 
    @{ 
        Html.RenderPartial("_NavBar");
    }

    <div class="mainContainer">
        @RenderBody()
    </div>

    <div class="mainFooter">
        <div class="dotContainer">
            <div class="dot">
                <span class="dotHelper"></span>
                <a href='@Url.Action("Index", "Movie", new { order = "Title" })' >
                    <img src="~/Content/Images/cameraIcon.png" />
                </a>
            </div>
            <p>View by</p>
            <h3>Title</h3>
        </div>
        <div class="dotContainer">
            <div class="dot">
                <span class="dotHelper"></span>
                <a href='@Url.Action("Index", "Movie", new { order = "Rating" })' >
                    <img src="~/Content/Images/starIcon.png" />
                </a>
            </div>
            <p>View by</p>
            <h3>Rating</h3>
        </div>
        <div class="dotContainer">
            <div class="dot">
                <span class="dotHelper"></span>
                <a href='@Url.Action("Index", "Movie", new { order = "Year" })' >
                    <img src="~/Content/Images/yearIcon.png" />
                </a>
            </div>
            <p>View by</p>
            <h3>Year</h3>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/main")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
